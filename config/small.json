{
  "name": "small",
  "width": 480,
  "height": 320,
  "default_font_size": 18,
  "font_families": [
    "DejaVu Sans Mono",
    "Liberation Mono",
    "Consolas",
    "Monaco",
    "Menlo",
    "Ubuntu Mono",
    "Courier New",
    "monospace"
  ],
  "output_type": "ax206usb",
  "output_file": "monitor_small.png",
  "refresh_interval": 1000,
  "history_size": 120,
  "colors": {
    "default": "#ffffff",
    "cpu_temp": "#ff6b6b",
    "cpu_usage": "#4ecdc4",
    "memory_usage": "#f7b731",
    "gpu_temp": "#fd79a8",
    "gpu_usage": "#fdcb6e",
    "network_ip": "#74b9ff",
    "current_time": "#ddd"
  },
  "items": [
    {
      "type": "value",
      "monitor": "network_ip",
      "x": 5,
      "y": 5,
      "width": 200,
      "height": 25,
      "font_size": 14,
      "background": "#1a1a1a",
      "label": false
    },
    {
      "type": "value",
      "monitor": "current_time",
      "x": 275,
      "y": 5,
      "width": 200,
      "height": 25,
      "font_size": 14,
      "background": "#1a1a1a",
      "label": false
    },
    {
      "type": "value",
      "monitor": "cpu_temp",
      "x": 5,
      "y": 35,
      "width": 115,
      "height": 70,
      "font_size": 26,
      "background": "#2a2a2a",
      "show_unit": true
    },
    {
      "type": "value",
      "monitor": "cpu_usage",
      "x": 125,
      "y": 35,
      "width": 115,
      "height": 70,
      "font_size": 26,
      "background": "#2a2a2a"
    },
    {
      "type": "value",
      "monitor": "memory_usage",
      "x": 245,
      "y": 35,
      "width": 115,
      "height": 70,
      "font_size": 26,
      "background": "#2a2a2a"
    },
    {
      "type": "value",
      "monitor": "gpu_temp",
      "x": 365,
      "y": 35,
      "width": 110,
      "height": 70,
      "font_size": 26,
      "background": "#2a2a2a",
      "show_unit": true
    },
    {
      "type": "value",
      "monitor": "gpu_usage",
      "x": 5,
      "y": 110,
      "width": 230,
      "height": 70,
      "font_size": 26,
      "background": "#2a2a2a",
      "show_unit": true
    },
    {
      "type": "progress",
      "monitor": "cpu_usage",
      "x": 245,
      "y": 110,
      "width": 230,
      "height": 35,
      "max": 100
    },
    {
      "type": "progress",
      "monitor": "memory_usage",
      "x": 245,
      "y": 150,
      "width": 230,
      "height": 35,
      "max": 100
    },
    {
      "type": "chart",
      "monitor": "cpu_usage",
      "x": 5,
      "y": 185,
      "width": 230,
      "height": 130,
      "history": true,
      "show_label": true,
      "show_header": true,
      "show_unit": true
    },
    {
      "type": "chart",
      "monitor": "memory_usage",
      "x": 245,
      "y": 190,
      "width": 230,
      "height": 125,
      "history": true,
      "show_label": true,
      "show_header": true,
      "show_unit": true
    }
  ]
}
