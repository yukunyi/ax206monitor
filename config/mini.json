{
  "name": "mini",
  "width": 480,
  "height": 320,
  "font_sizes": {
    "min_label": 12,
    "def_label": 14,
    "default": 20,
    "small": 10,
    "large": 16
  },
  "font_families": [
    "DejaVu Sans Mono",
    "Liberation Mono",
    "Consolas",
    "Monaco",
    "Menlo",
    "Ubuntu Mono",
    "Courier New",
    "monospace"
  ],
  "output_type": "ax206usb",
  "output_file": "",
  "refresh_interval": 1000,
  "history_size": 600,
  "network_interface": "auto",
  "libre_hardware_monitor_url": "http://127.0.0.1:8085",
  "colors": {
    "default_text": "#f8fafc",
    "default_background": "#0f172a",
    "header_text": "#38bdf8",
    "header_background": "#020617",
    "progress_background": "#334155",
    "value_normal": "#22d3ee",
    "progress_fill": "#06b6d4",
    "chart_line": "#64748b",
    "value_warning": "#fbbf24",
    "value_critical": "#ef4444",
    "border_color": "#475569"
  },
  "color_thresholds": {
    "cpu_temp": {
      "low_threshold": 60,
      "high_threshold": 75,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "gpu_temp": {
      "low_threshold": 60,
      "high_threshold": 75,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "disk_default_temp": {
      "low_threshold": 50,
      "high_threshold": 65,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "cpu_usage": {
      "low_threshold": 60,
      "high_threshold": 75,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "memory_usage": {
      "low_threshold": 60,
      "high_threshold": 75,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "gpu_usage": {
      "low_threshold": 60,
      "high_threshold": 75,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "net_default_upload": {
      "low_threshold": 10,
      "high_threshold": 50,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "net_default_download": {
      "low_threshold": 10,
      "high_threshold": 50,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "disk_default_read_speed": {
      "low_threshold": 104.857600,
      "high_threshold": 209.715200,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "disk_default_write_speed": {
      "low_threshold": 104.857600,
      "high_threshold": 209.715200,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "gpu_memory_usage": {
      "low_threshold": 80,
      "high_threshold": 90,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    },
    "swap_usage": {
      "low_threshold": 50,
      "high_threshold": 80,
      "low_color": "#22c55e",
      "medium_color": "#eab308",
      "high_color": "#ef4444"
    }
  },
  "items": [
    {
      "type": "value",
      "monitor": "net_default_ip",
      "x": 5,
      "y": 5,
      "width": 180,
      "height": 20,
      "font_size": 12,
      "bg": "#020617",
      "label": false
    },
    {
      "type": "value",
      "monitor": "current_time",
      "x": 295,
      "y": 5,
      "width": 180,
      "height": 20,
      "font_size": 12,
      "bg": "#020617",
      "label": false
    },
    {
      "type": "chart",
      "monitor": "cpu_temp",
      "x": 0,
      "y": 25,
      "width": 238,
      "height": 95,
      "font_size": 25,
      "history": true
    },
    {
      "type": "chart",
      "monitor": "cpu_usage",
      "x": 240,
      "y": 25,
      "width": 240,
      "height": 95,
      "font_size": 25,
      "history": true
    },
    {
      "type": "big_value",
      "monitor": "net_default_upload",
      "x": 0,
      "y": 122,
      "width": 238,
      "height": 64,
      "font_size": 28,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "net_default_download",
      "x": 240,
      "y": 122,
      "width": 240,
      "height": 64,
      "font_size": 28,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "memory_usage",
      "x": 0,
      "y": 188,
      "width": 118,
      "height": 64,
      "font_size": 24,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "swap_usage",
      "x": 120,
      "y": 188,
      "width": 118,
      "height": 64,
      "font_size": 24,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "gpu_temp",
      "x": 240,
      "y": 188,
      "width": 118,
      "height": 64,
      "font_size": 26,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "gpu_memory_usage",
      "x": 360,
      "y": 188,
      "width": 120,
      "height": 64,
      "font_size": 24,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "disk_default_temp",
      "x": 0,
      "y": 254,
      "width": 158,
      "height": 66,
      "font_size": 22,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "disk_default_read_speed",
      "x": 160,
      "y": 254,
      "width": 158,
      "height": 66,
      "font_size": 18,
      "bg": "#0f172a"
    },
    {
      "type": "big_value",
      "monitor": "disk_default_write_speed",
      "x": 320,
      "y": 254,
      "width": 160,
      "height": 66,
      "font_size": 18,
      "bg": "#0f172a"
    }
  ]
}
